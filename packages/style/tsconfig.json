{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@src/*": ["src/*"],
      "@css/*": ["src/css/*"]
    },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "build",
    "allowImportingTsExtensions": true
  },
  "include": ["src", "./typings", "src/**/*.scss"],
  "exclude": ["node_modules"]
}
